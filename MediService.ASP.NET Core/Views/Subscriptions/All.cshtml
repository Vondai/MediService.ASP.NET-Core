@model List<SubscriptionViewModel>

@{
    ViewData["Title"] = "Subscriptions";
    var cheapestSub = Model[0].Price;
    var numberOfServices = Model[0].CountServices;
}

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Our Subscription Plans</h1>
    <p class="lead">For only $@cheapestSub you may choose @numberOfServices appointments with our medical specialists. Click <a href="/Services/All">services</a> to learn more.</p>
</div>

<div class="container">
    <div class="card-deck mb-3 text-center">
        @foreach (var subsciption in Model)
        {
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">@subsciption.Name</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">$@subsciption.Price <small class="text-muted">/ mo</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Send messages to our Specialists</li>
                        <li>Number of available appointments: @subsciption.CountServices</li>
                    </ul>
                    <button type="button" class="btn btn-lg btn-block btn-primary" onclick="riderect()">Subscribe now</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function riderect() {
            location.href = '/Subscriptions/Subscribe';
        }
    </script>
} 