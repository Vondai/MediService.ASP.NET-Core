@model List<SubscriptionViewModel>
@{
    ViewData["Title"] = "Subscriptions";
}

<body>
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Our Subscription Plans</h1>
        <p class="lead">For only $9.99 you may choose two appointments with our medical specialists. Click <a href="#">services</a> to learn more or try it out now.</p>
    </div>

    <div class="container">
        <div class="card-deck mb-3 text-center">
            @foreach (var subsciption in Model)
            {
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">@subsciption.Name</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$@subsciption.Price <small class="text-muted">/ mo</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>10 users included</li>
                            <li>2 GB of storage</li>
                            <li>Email support</li>
                            <li>Help center access</li>
                            <li>Count of services: @subsciption.CountServices</li>
                        </ul>
                        <button type="button" class="btn btn-lg btn-block btn-primary">Sign up for free</button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
