@model CreateReviewFormModel
@{
    ViewData["Title"] = "Rate Us";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Write a review</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" rows="4" asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <select asp-for="Rating" class="form-control" asp-items="Html.GetEnumSelectList<Rating>()">
                    <option>Select a rating</option>
                </select>
                <span asp-validation-for="Rating"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
    </div>
</div>
