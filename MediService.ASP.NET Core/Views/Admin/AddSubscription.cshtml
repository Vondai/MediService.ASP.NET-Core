@model SubscriptionFormModel

<div class="container">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" id="Name" placeholder="Basic" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input type="text" class="form-control" id="Price" placeholder="9.99" asp-for="Price">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="CountServices">Count of services</label>
            <input type="number" class="form-control" id="CountServices" placeholder="2" asp-for="CountServices">
            <span asp-validation-for="CountServices"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Subscription</button>
    </form>
</div>
