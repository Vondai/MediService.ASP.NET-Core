@model SpecialistAddFormModel

@{
    ViewData["Title"] = "Add Specialist";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Specialist</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text" class="form-control" asp-for="Username">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" rows="4" placeholder="Best doctor ever." asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label for="SpecImage">Select an image for the specialist:</label>
                <input type="file" id="SpecImage" name="specImage">
            </div>
            <div class="form-group">
                <label asp-for="ServiceId"></label>
                <select asp-for="ServiceId" class="form-control">
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
                <span asp-validation-for="ServiceId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Specialist</button>
        </form>
    </div>
</div>

