@model UserLoginFormModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Login</h2>
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text" class="form-control" placeholder="Username" asp-for="Username" autofocus>
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
