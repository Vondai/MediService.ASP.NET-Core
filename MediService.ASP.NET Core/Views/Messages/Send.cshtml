@model MessageFormModel
@{
    ViewData["Title"] = "Send a message";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center text-warning font-weight-bolder">Send a message</h2>
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="form-group">
                <label class="text-warning" asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label class="text-warning" asp-for="Content"></label>
                <textarea type="text" class="form-control" style="resize: none" rows="4" cols="50" asp-for="Content"></textarea>
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
            <button type="submit" class="btn btn-warning">Send</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}