@model List<AppointmentArchiveViewModel>

@{
    ViewData["Title"] = "All appointments";
}

<div class="container">
    <h2 class="heading-margin text-center text-warning font-weight-bolder">Past appointments</h2>
    @if (!Model.Any())
    {
        <h2 class="text-center text-primary">You do not have any past appointments.</h2>
    }
    else
    {
        <table class="table table-primary table-bordered col-sm-12 offset-lg-2 col-lg-8 offset-xl-2 col-xl-8">
            <thead>
                <tr>
                    <th class="text-center" scope="col">Date</th>
                    <th class="text-center" scope="col">Status</th>
                    <th class="text-center" scope="col">Service</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td class="text-center">@appointment.Date</td>
                        <td class="text-center">@appointment.Status</td>
                        <td class="text-center">@appointment.ServiceName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a href="/Appointments/Mine" class="btn btn-warning text-center offset-xl-2">Back </a>
</div>