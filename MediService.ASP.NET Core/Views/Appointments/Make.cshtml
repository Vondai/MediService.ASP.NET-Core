@model AppointmentFormModel
@{
    ViewData["Title"] = "Make an appointment";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Make an appointment</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Time"></label>
                <input type="datetime-local" class="form-control" asp-for="Time">
                <span asp-validation-for="Time"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId"></label>
                <select asp-for="ServiceId" class="form-control">
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
                <span asp-validation-for="ServiceId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Make appointment</button>
        </form>

    </div>
</div>
