@model AppointmentFormModel
@{
    ViewData["Title"] = "Make an appointment";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Make an appointment</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Address"></label>
                <input type="text" class="form-control" value="@Model.Address" readonly asp-for="Address">
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo"></label>
                <textarea type="text" class="form-control" style="resize: none" rows="4" cols="50" asp-for="AdditionalInfo"></textarea>
                <span asp-validation-for="AdditionalInfo"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time"></label>
                <input type="datetime-local" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" max="@DateTime.UtcNow.AddDays(30).ToString("yyyy-MM-dd")" class="form-control" asp-for="Time">
                <span asp-validation-for="Time"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId"></label>
                <select asp-for="ServiceId" class="form-control">
                    <option value="" selected disabled hidden>Select a medical service</option>
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
                <span asp-validation-for="ServiceId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Make appointment</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
