@model SpecialistAddFormModel
@{
    ViewData["Title"] = "Add Specialist";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center text-warning font-weight-bolder">Add Specialist</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="text-warning" asp-for="Username"></label>
                <input type="text" class="form-control" asp-for="Username">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label class="text-warning" asp-for="Description"></label>
                <textarea class="form-control" rows="4" placeholder="Best doctor ever." asp-for="Description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label class="text-warning" for="SpecImage">Select an image for the specialist:</label>
                <input type="file" id="SpecImage" name="specImage">
                <p class="font-weight-bolder"><span class="text-warning">Note: </span>Image is not required.</p>
            </div>
            <div class="form-group">
                <label class="text-warning" asp-for="ServiceId"></label>
                <select asp-for="ServiceId" class="form-control">
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="ServiceId"></span>
            </div>
            <button type="submit" class="btn btn-warning">Add Specialist</button>
        </form>
    </div>
</div>